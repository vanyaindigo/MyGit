<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="382.0" prefWidth="600.0" styleClass="background" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Chat.Client.PrivateWindowController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
            <children>
                <TextArea fx:id="textArea" editable="false" focusTraversable="false" prefHeight="304.0" prefWidth="572.0" wrapText="true" VBox.vgrow="ALWAYS" />
                <HBox alignment="TOP_CENTER" spacing="5.0">
                    <children>
                        <TextField fx:id="nickField" minHeight="-Infinity" prefHeight="38.0" prefWidth="149.0" promptText="Nickname" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Segoe UI" size="16.0" />
                            </font>
                        </TextField>
                        <TextField fx:id="msgField" minHeight="-Infinity" prefHeight="38.0" prefWidth="289.0" promptText="Введите сообщение" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Segoe UI" size="16.0" />
                            </font>
                        </TextField>
                        <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#sendMsg" prefHeight="38.0" prefWidth="101.0" text="Send" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
